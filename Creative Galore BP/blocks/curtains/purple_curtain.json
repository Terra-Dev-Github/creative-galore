{
    "format_version": "1.20.80",
    "minecraft:block": {
        "description": {
            "identifier": "terra:purple_curtain",
            "menu_category": {
                "group": "itemGroup.name.none",
                "category": "construction"
            },
            "traits": {
                "minecraft:placement_direction": {
                    "enabled_states": [
                        "minecraft:cardinal_direction"
                    ]
                }
            },
            "states": {
                "terra:curtain_top": [
                    0,
                    1
                ],
                "terra:curtain_bottom": [
                    0,
                    1
                ]
            }
        },
        "components": {
            "tag:wool": {},
            // "minecraft:breathability": "air",
            "minecraft:tick": {
                "interval_range": [
                    3,
                    3
                ]
            },
            "minecraft:collision_box": {
                "origin": [
                    -8,
                    14,
                    6
                ],
                "size": [
                    16,
                    2,
                    2
                ]
            },
            "minecraft:selection_box": {
                "origin": [
                    -8,
                    0,
                    6
                ],
                "size": [
                    16,
                    16,
                    2
                ]
            },
            // hardness: 0.1 (rounded from 0.75)
            "minecraft:destructible_by_mining": {
                "seconds_to_destroy": 0.15
            },
            "minecraft:light_dampening": 0,
            "minecraft:destructible_by_explosion": {
                "explosion_resistance": 0.1
            },
            "minecraft:geometry": "geometry.curtain",
            "minecraft:material_instances": {
                "*": {
                    "texture": "purple_curtain",
                    "render_method": "alpha_test",
                    "face_dimming": true,
                    "ambient_occlusion": true
                }
            },
            "minecraft:flammable": {
                "destroy_chance_modifier": 60,
                "catch_chance_modifier": 30
            },
            // adds block functionality
            "minecraft:custom_components": [
                "terra:curtain_properties"
            ]
        },
        "permutations": [
            // for rotation
            {
                "condition": "query.block_state('minecraft:cardinal_direction') == 'north'",
                "components": {
                    "minecraft:transformation": {
                        "rotation": [
                            0,
                            180,
                            0
                        ]
                    }
                }
            },
            {
                "condition": "query.block_state('minecraft:cardinal_direction') == 'south'",
                "components": {
                    "minecraft:transformation": {
                        "rotation": [
                            0,
                            0,
                            0
                        ]
                    }
                }
            },
            {
                "condition": "query.block_state('minecraft:cardinal_direction') == 'east'",
                "components": {
                    "minecraft:transformation": {
                        "rotation": [
                            0,
                            90,
                            0
                        ]
                    }
                }
            },
            {
                "condition": "query.block_state('minecraft:cardinal_direction') == 'west'",
                "components": {
                    "minecraft:transformation": {
                        "rotation": [
                            0,
                            -90,
                            0
                        ]
                    }
                }
            },
            // for connecting
            {
                // default
                "condition": "!q.block_state('terra:curtain_top') && !q.block_state('terra:curtain_bottom')",
                "components": {
                    "minecraft:material_instances": {
                        "*": {
                            "texture": "purple_curtain",
                            "render_method": "alpha_test",
                            "face_dimming": true,
                            "ambient_occlusion": true
                        }
                    }
                }
            },
            {
                // center
                "condition": "q.block_state('terra:curtain_top') && q.block_state('terra:curtain_bottom')",
                "components": {
                    "minecraft:collision_box": false,
                    "minecraft:material_instances": {
                        "*": {
                            "texture": "purple_curtain_center",
                            "render_method": "alpha_test",
                            "face_dimming": true,
                            "ambient_occlusion": true
                        },
                        "stick": {
                            "texture": "empty",
                            "render_method": "alpha_test",
                            "face_dimming": true,
                            "ambient_occlusion": true
                        }
                    }
                }
            },
            {
                // bottom
                "condition": "!q.block_state('terra:curtain_top') && q.block_state('terra:curtain_bottom')",
                "components": {
                    "minecraft:collision_box": false,
                    "minecraft:material_instances": {
                        "*": {
                            "texture": "purple_curtain_bottom",
                            "render_method": "alpha_test",
                            "face_dimming": true,
                            "ambient_occlusion": true
                        },
                        "stick": {
                            "texture": "empty",
                            "render_method": "alpha_test",
                            "face_dimming": true,
                            "ambient_occlusion": true
                        }
                    }
                }
            },
            {
                // top
                "condition": "q.block_state('terra:curtain_top') && !q.block_state('terra:curtain_bottom')",
                "components": {
                    "minecraft:material_instances": {
                        "*": {
                            "texture": "purple_curtain_top",
                            "render_method": "alpha_test",
                            "face_dimming": true,
                            "ambient_occlusion": true
                        }
                    }
                }
            }
        ]
    }
}