{
    "format_version": "1.20.80",
    "minecraft:block": {
        "description": {
            "identifier": "terra:dark_oak_bench",
            "menu_category": {
                "category": "construction",
                "group": "none"
            },
            "traits": {
                "minecraft:placement_direction": {
                    "enabled_states": [
                        "minecraft:cardinal_direction"
                    ]
                }
            },
            "states": {
                "terra:block_left": [
                    0,
                    1
                ],
                "terra:block_right": [
                    0,
                    1
                ]
            }
        },
        "components": {
            "tag:wood": {},
            "tag:minecraft:is_axe_item_destructible": {},
            "minecraft:tick": {
                "interval_range": [
                    10,
                    20
                ]
            },
            // hardness: 2
            "minecraft:destructible_by_mining": {
                "seconds_to_destroy": 3
            },
            "minecraft:destructible_by_explosion": {
                "explosion_resistance": 3
            },
            "minecraft:flammable": {
                "destroy_chance_modifier": 5,
                "catch_chance_modifier": 5
            },
            "minecraft:light_dampening": 0,
            "minecraft:selection_box": {
                "origin": [
                    -8,
                    0,
                    -5
                ],
                "size": [
                    16,
                    12,
                    10
                ]
            },
            "minecraft:collision_box": {
                "origin": [
                    -8,
                    0,
                    -5
                ],
                "size": [
                    16,
                    12,
                    10
                ]
            },
            "minecraft:geometry": {
                "identifier": "geometry.wood_bench",
                "bone_visibility": {
                    "leg1": "q.block_state('terra:block_right') == 0",
                    "leg2": "q.block_state('terra:block_left') == 0",
                    "bottom_east": "q.block_state('terra:block_right') == 1",
                    "bottom_west": "q.block_state('terra:block_left') == 1"
                }
            },
            // according to map item data on the mc wiki
            "minecraft:map_color": "#664C33",
            "minecraft:loot": "loot_tables/blocks/benches/dark_oak_bench.json",
            "minecraft:material_instances": {
                "*": {
                    "texture": "dark_oak_bench_side",
                    "render_method": "alpha_test",
                    "face_dimming": true,
                    "ambient_occlusion": true
                },
                "up": {
                    "texture": "dark_oak_bench_top",
                    "render_method": "alpha_test",
                    "face_dimming": true,
                    "ambient_occlusion": true
                },
                "down": {
                    "texture": "dark_oak_bench_top",
                    "render_method": "alpha_test",
                    "face_dimming": true,
                    "ambient_occlusion": true
                }
            },
            // adds block functionality
            "minecraft:custom_components": [
                "terra:lateral_connect",
                "terra:block_sitting"
            ]
        },
        "permutations": [
            // for rotation
            {
                "condition": "query.block_state('minecraft:cardinal_direction') == 'north'",
                "components": {
                    "minecraft:transformation": {
                        "rotation": [
                            0,
                            180,
                            0
                        ]
                    }
                }
            },
            {
                "condition": "query.block_state('minecraft:cardinal_direction') == 'south'",
                "components": {
                    "minecraft:transformation": {
                        "rotation": [
                            0,
                            0,
                            0
                        ]
                    }
                }
            },
            {
                "condition": "query.block_state('minecraft:cardinal_direction') == 'east'",
                "components": {
                    "minecraft:transformation": {
                        "rotation": [
                            0,
                            90,
                            0
                        ]
                    }
                }
            },
            {
                "condition": "query.block_state('minecraft:cardinal_direction') == 'west'",
                "components": {
                    "minecraft:transformation": {
                        "rotation": [
                            0,
                            -90,
                            0
                        ]
                    }
                }
            },
            // for connecting
            {
                // block left
                "condition": "q.block_state('terra:block_left')",
                "components": {
                    "tag:terra:block_left": {}
                }
            },
            {
                // block right
                "condition": "q.block_state('terra:block_right')",
                "components": {
                    "tag:terra:block_left": {}
                }
            }
        ]
    }
}