{
    "format_version": "1.16.100",
    "minecraft:block": {
        "description": {
            "identifier": "terra:diorite_pillar",
            "register_to_creative_menu": true,
            "is_experimental": false,
            "properties": {
                "terra:facing_direction": [
                    0,
                    1,
                    2
                ]
            }
        },
        "permutations": [
            {
                "condition": "q.block_property('terra:facing_direction') == 0",
                "components": {
                    "minecraft:rotation": [
                        0,
                        0,
                        0
                    ]
                }
            },
            {
                "condition": "q.block_property('terra:facing_direction') == 1",
                "components": {
                    "minecraft:rotation": [
                        90,
                        0,
                        0
                    ]
                }
            },
            {
                "condition": "q.block_property('terra:facing_direction') == 2",
                "components": {
                    "minecraft:rotation": [
                        0,
                        0,
                        90
                    ]
                }
            }
        ],
        "components": {
            "tag:cer:solid_block": {},
            "tag:stone": {},
            "minecraft:unit_cube": {},
            "minecraft:creative_category": {
                "category": "construction",
                "group": "itemGroup.name.none"
            },
            "minecraft:material_instances": {
                "*": {
                    "texture": "diorite_pillar_side",
                    "render_method": "opaque"
                },
                "up": {
                    "texture": "diorite_pillar_top",
                    "render_method": "opaque"
                },
                "down": {
                    "texture": "diorite_pillar_top",
                    "render_method": "opaque"
                }
            },
            "minecraft:destroy_time": 0.5,
            "minecraft:explosion_resistance": 3,
            "minecraft:loot": "loot_tables/blocks/diorite_pillar.json",
            // according to map item data on the mc wiki
            "minecraft:map_color": "#FFFCF5",
            "minecraft:on_player_placing": {
                "event": "terra:set_facing_direction"
            }
        },
        "events": {
            "terra:set_facing_direction": {
                "set_block_property": {
                    "terra:facing_direction": "math.floor(query.block_face / 2)"
                }
            }
        }
    }
}