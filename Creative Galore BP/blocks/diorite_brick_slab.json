{
    "format_version": "1.20.80",
    "minecraft:block": {
        "description": {
            "identifier": "terra:diorite_brick_slab",
            "menu_category": {
                "category": "construction",
                "group": "itemGroup.name.slab"
            },
            "traits": {
                "minecraft:placement_position": {
                    "enabled_states": [
                        "minecraft:vertical_half"
                    ]
                }
            },
            "states": {
                "terra:double": [
                    false,
                    true
                ],
                "terra:waterlogged": [
                    false,
                    true
                ]
            }
        },
        "permutations": [
            // bottom slab
            {
                "condition": "q.block_state('minecraft:vertical_half') == 'bottom' && !q.block_state('terra:double')",
                "components": {
                    "minecraft:collision_box": {
                        "origin": [
                            -8,
                            0,
                            -8
                        ],
                        "size": [
                            16,
                            8,
                            16
                        ]
                    },
                    "minecraft:selection_box": {
                        "origin": [
                            -8,
                            0,
                            -8
                        ],
                        "size": [
                            16,
                            8,
                            16
                        ]
                    }
                }
            },
            // top slab
            {
                "condition": "q.block_state('minecraft:vertical_half') == 'top' && !q.block_state('terra:double')",
                "components": {
                    "minecraft:collision_box": {
                        "origin": [
                            -8,
                            8,
                            -8
                        ],
                        "size": [
                            16,
                            8,
                            16
                        ]
                    },
                    "minecraft:selection_box": {
                        "origin": [
                            -8,
                            8,
                            -8
                        ],
                        "size": [
                            16,
                            8,
                            16
                        ]
                    }
                }
            },
            // double slab
            {
                "condition": "q.block_state('terra:double')",
                "components": {
                    "minecraft:geometry": "minecraft:geometry.full_block",
                    "minecraft:loot": "loot_tables/blocks/diorite_brick_slab.json"
                }
            }
        ],
        "components": {
            "tag:stone": {},
            "tag:minecraft:is_pickaxe_item_destructible": {},
            // hardness: 1.5
            "minecraft:destructible_by_mining": {
                "seconds_to_destroy": 7.5
            },
            // according to map item data on the mc wiki
            "minecraft:map_color": "#FFFCF5",
            "minecraft:geometry": {
                "identifier": "geometry.slab",
                "bone_visibility": {
                    "bottom_slab": "q.block_state('minecraft:vertical_half') == 'bottom'",
                    "top_slab": "q.block_state('minecraft:vertical_half') == 'top'"
                }
            },
            "minecraft:material_instances": {
                "*": {
                    "texture": "stone_diorite_smooth_bricks_small",
                    "render_method": "opaque"
                }
            },
            // adds block functionality
            "minecraft:custom_components": [
                "terra:on_slab_interact"
            ]
        }
    }
}